{% extends "base.html.twig" %}
{% block title %}
    Tous mes films
{% endblock title %}
{% block body %}
    <div class="container">

        <div class="mt-3">
            <div class="container">
                {% form_theme form with ['bootstrap_5_layout.html.twig'] only %}
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-4 offset-2">
                        {{ form_row(form.titre) }}
                        {{ form_row(form.annee) }}
                        <div class="col">
                            <div class="form-group">
                                <button class="btn btn-primary">Rechercher</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock body %}
