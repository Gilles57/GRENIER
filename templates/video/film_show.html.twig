{% extends 'base.html.twig' %}

{% block title %}Films et séries{% endblock %}

{% block body %}
    <div class="jumbotron  jumbotron-fluid my-3 p-3 text-center">
        <h1 class="display-4 fw-bold"><i class="fa-solid fa-photo-film"></i> Films<i
                    class="fa-solid fa-photo-film"></i></h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <p><img src="{{ film.media }}" alt="{{ film.media }}" style="width: 300px; height: 300px"></p>
            </div>
            <div class="col-8">
                <table class="table table-bordered table-sm">
                    <tr>
                        <td>Titre :</td>
                        <td>{{ film.titre }}</td>
                    </tr>
                    <tr>
                        <td>Titre original :</td>
                        <td>{{ film.titreOriginal }}</td>
                    </tr>
                    <tr>
                        <td>Année de sortie</td>
                        <td>{{ film.anneeSortie }}</td>
                    </tr>
                    <tr>
                        <td>Déjà vu :</td>
                        <td>{% if  film.vu %}👁️️{% else %}-{% endif %}</td>
                    </tr>
                    <tr>
                        <td>Coup de cœur :</td>
                        <td>{% if  film.coupDeCoeur %}❤️{% else %}🤍{% endif %}</td>
                    </tr>
                    <tr>
                        <td>À garder :</td>
                        <td>{% if  film.aGarder %}🔒️{% else %}🔓{% endif %}</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <a href="{{ path('app_films') }}" class="btn btn-info mt-3 ">Retour à l'index</a>
        </div>

    </div>
{% endblock %}
